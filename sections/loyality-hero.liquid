<style>
  body,
  html {
    height: 100%;
  }


  body {
    overflow-x: hidden;
    width: 100%;
  }

  .hero_image {
    /* Use "linear-gradient" to add a darken background effect to the image (photographer.jpg). This will make the text easier to read */
    background-image: url('{% if section.settings.hero_image %}{{section.settings.hero_image | image_url}}{% else %}https://cdn.shopify.com/s/files/1/0756/2012/2920/files/Loyality_Banner_Mobile.png?v=1684172952{% endif %}');

    width: 100%;
    height: 400px;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  @media(width > 768px) {
    .hero_image {
      background-image: url('{% if section.settings.hero_image %}{{section.settings.hero_image | image_url}}{% else %}https://cdn.shopify.com/s/files/1/0756/2012/2920/files/loyality-hero-large.png?v=1684256591{% endif %}');

      width: 100%;
      height: 750px;
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      position: relative;

      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      align-items: flex-start;
    }
  }

  /* Place text in the middle of the image */

  /* text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); */

  .hero_text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    margin: 60px;
    text-align: center;
  }

  @media(width > 768px) {
    .hero_text {
      max-width: 600px;
      text-align: left;
      margin-bottom: 120px;
    }
  }

  .hero_title {
    font-weight: 700;
    font-size: 20px;
    line-height: 24px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  @media(width > 768px) {
    .hero_title {
      font-weight: 700;
      font-size: 40px;
      line-height: 44px;
      margin-bottom: 20px;
      margin-right: auto;
    }
  }

  .hero_subtitle {
    font-weight: 700;
    font-size: 10px;
    line-height: 16px;
    letter-spacing: 0.8px;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 32px;
  }

  @media(width > 768px) {
    .hero_subtitle {
      font-weight: 500;
      font-size: 20px;
      line-height: 28px;
      letter-spacing: 4px;
      margin-bottom: 36px;
    }

  }

  @media(width > 768px) {
    .hero__link-loyality {
      margin-right: auto;
    }
  }


  .btn-loyality-hero {
    font-weight: 700;
    font-size: 14px;
    line-height: 24px;
    display: inline;
    text-align: center;
    max-width: 105px;
    letter-spacing: 0.5px;
  }

  @media(width > 768px) {
    .btn-loyality-hero {
      padding: 18px 40px;
      font-weight: 700;
      font-size: 20px;
      line-height: 24px;
      margin-right: 30px !important;
    }
  }


  .btn-loyality-hero--filled {
    background-color: white;
    color: black;
  }
</style>



<div class="hero_image">
  <div class="hero_text">
    <h2 class="hero_title">{{ section.settings.title }}</h2>
    <p class="hero_subtitle">{{ section.settings.subtitle }}</p>
    <div class="hero__link hero__link-loyality">
      <a href="/" class="btn btn-loyality-hero btn-loyality-hero--filled">
        Register
      </a>
      <a href="/" class="btn btn-loyality-hero btn--inverse">
        Login
      </a>
    </div>
  </div>
</div>



{% schema %}
  {
    "name": "Loyality Hero",
    "class": "index-section--flush",
    "settings": [
      {
        "type": "image_picker",
        "id": "hero_image",
        "label": "Hero Image"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "text",
        "id": "subtitle",
        "label": "Sub-Title"
      }
    ],
    "presets": [
      {
        "name": "Loyality Hero",
        "settings": {
          "title": "Mallet Members Club",
          "subtitle": "Join the Represent Prestige programme and be rewarded for every purchase."
        }
      }
    ]
  }
{% endschema %}