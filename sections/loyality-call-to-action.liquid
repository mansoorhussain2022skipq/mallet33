<style>
  body,
  html {
    height: 100%;
  }


  body {
    overflow-x: hidden;
    width: 100%;
  }

  .block {
    margin: 5rem 10rem;
  }

  .container-cta {
    text-align: center;
  }

  .heading-cta {
    font-weight: 700;
    font-size: 18px;
    line-height: 24px;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin: 0 3.75rem;
  }

  @media(width > 768px) {
    .heading-cta {
      font-weight: 700;
      font-size: 24px;
      line-height: 24px;
    }
  }

  .para-cta {
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
    margin: 1rem 1rem 4.75rem;
    color: #1D1D1D;
    /* or 150% */

    text-align: center;
    letter-spacing: 1px;
  }

  @media(width > 768px) {
    .para-cta {
      font-size: 18px;
      max-width: 950px;
      margin-left: auto;
      margin-right: auto;
      margin-top: 1.5rem;
    }
  }

  .btn-cta {
    padding: 19px 3.4rem;
    font-size: 15px;
    line-height: 24px;
  }

  @media(width > 768px) {
    .btn-cta {
      display: none;
    }
  }
</style>


<div class="block">
  <div class="container-cta">
    <h2 class="heading-cta">{{ section.settings.title }}</h2>
    <p class="para-cta">{{ section.settings.content }}</p>
    <a href="/" class="btn btn-cta">
      Register
    </a>
  </div>
</div>


{% schema %}
  {
    "name": "Loyality Call-To-Action",
    "class": "index-section--flush",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "text",
        "id": "content",
        "label": "Content"
      }
    ],
    "presets": [
      {
        "name": "Loyality Call-To-Action",
        "settings": {
          "title": "Sign up for 10% off your first order",
          "content": "Lorem ipsum dolor sit amet consectetur. Molestie odio maecenas suscipit etiam potenti leo. Mauris lacus sed vitae feugiat facilisis iaculis a diam."
        }
      }
    ]
  }
{% endschema %}